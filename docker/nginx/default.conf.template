# HTTPSæœåŠ¡å™¨é…ç½®
server {
    listen 443 ssl http2;
    server_name YOUR_DOMAIN_HERE;  # ğŸ”´ æ”¹æˆå®¢æˆ·åŸŸåï¼Œå¦‚ï¼šai.company.com
    
    # SSLè¯ä¹¦é…ç½®
    ssl_certificate /etc/letsencrypt/live/YOUR_DOMAIN_HERE/fullchain.pem;      # ğŸ”´ æ”¹åŸŸå
    ssl_certificate_key /etc/letsencrypt/live/YOUR_DOMAIN_HERE/privkey.pem;    # ğŸ”´ æ”¹åŸŸå
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers off;
    
    # æ–‡ä»¶ä¸Šä¼ å¤§å°é™åˆ¶
    client_max_body_size 10M;
    
    # Gzipå‹ç¼©
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    
    # å‰ç«¯é™æ€æ–‡ä»¶
    root /usr/share/nginx/html;
    index index.html;
    
    # ä¸Šä¼ æ–‡ä»¶è®¿é—®
    location /uploads/ {
        alias /app/storage/uploads/;
        expires 7d;
        add_header Cache-Control "public";
    }
    
    # APIä»£ç†
    location /api/ {
        proxy_pass http://backend:4000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # SSEæ”¯æŒï¼ˆAIæµå¼è¾“å‡ºï¼‰
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 600s;
    }
    
    # WebSocketæ”¯æŒ
    location /socket.io/ {
        proxy_pass http://backend:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # å¥åº·æ£€æŸ¥
    location /health {
        proxy_pass http://backend:4000/health;
    }
    
    # å‰ç«¯è·¯ç”±ï¼ˆSPAæ”¯æŒï¼‰
    location / {
        try_files $uri $uri/ /index.html;
        
        # index.htmlä¸ç¼“å­˜
        location = /index.html {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
        }
        
        # å…¶ä»–é™æ€èµ„æºç¼“å­˜
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
}
