# 环境模式
NODE_ENV=production

# 应用配置
APP_NAME="AI Platform"
APP_DOMAIN=ai.xingyuncl.com
BACKEND_PORT=4000
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=AiPlatform@2025!
DB_NAME=ai_platform

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_ACCESS_SECRET=your-super-secret-jwt-key-change-this-in-production-2025
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-2025
JWT_ACCESS_EXPIRES=12h
JWT_REFRESH_EXPIRES=14d

# CORS配置
CORS_ORIGINS=https://ai.xingyuncl.com

# 文件上传配置
# 留空让系统自动检测
UPLOAD_DIR=
UPLOAD_MAX_SIZE=10485760

# AI API配置
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
BAIDU_API_KEY=""

# 日志配置
LOG_LEVEL=info
LOG_DIR=/var/www/ai-platform/logs/app

# 速率限制
RATE_LIMIT_MAX=1000

# 调试配置（生产环境设为false）
DEBUG_CONFIG=false
