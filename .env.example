# 环境模式
NODE_ENV=production

# 应用配置
APP_NAME="AI Platform"
APP_DOMAIN=your-domain.com
BACKEND_PORT=4000

# 数据库配置
# Docker环境使用服务名：mysql
# 本地环境使用：localhost
DB_HOST=mysql
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=AiPlatform@2025!
DB_NAME=ai_platform

# MySQL Root密码（仅Docker环境需要）
MYSQL_ROOT_PASSWORD=AiRootPass2025!

# Redis配置
# Docker环境使用服务名：redis
# 本地环境使用：localhost
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置（必须修改为随机字符串）
JWT_ACCESS_SECRET=your-random-access-secret-key-here
JWT_REFRESH_SECRET=your-random-refresh-secret-key-here
JWT_ACCESS_EXPIRES=12h
JWT_REFRESH_EXPIRES=14d

# CORS配置（多个域名用逗号分隔）
CORS_ORIGINS=http://localhost,http://your-domain.com

# 文件上传配置
# Docker环境：/app/storage/uploads
# 本地环境：/var/www/ai-platform/storage/uploads
# 留空则自动检测
UPLOAD_DIR=
UPLOAD_MAX_SIZE=10485760

# AI API配置（根据需要填写）
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
BAIDU_API_KEY=

# 日志配置
LOG_LEVEL=info
# Docker环境：/app/logs
# 本地环境：/var/www/ai-platform/logs
LOG_DIR=

# 速率限制
RATE_LIMIT_MAX=1000

# 是否显示配置调试信息
DEBUG_CONFIG=false
