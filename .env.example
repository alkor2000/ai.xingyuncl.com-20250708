# 应用配置
APP_NAME=AI Platform
APP_DOMAIN=ai.xingyuncl.com
NODE_ENV=production

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=AiPlatform@2025!
DB_NAME=ai_platform
DB_CONNECTION_LIMIT=10

# MySQL Root密码（首次部署使用）
MYSQL_ROOT_PASSWORD=rootpass2025

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ai_platform:

# JWT配置
JWT_ACCESS_SECRET=your-super-secret-key-2025-production
JWT_REFRESH_SECRET=your-refresh-secret-key-2025-production
JWT_ACCESS_EXPIRES=12h
JWT_REFRESH_EXPIRES=14d

# CORS配置
CORS_ORIGINS=https://ai.xingyuncl.com

# 速率限制
RATE_LIMIT_MAX=1000

# AI服务配置
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_TIMEOUT=30000
AI_RETRIES=3

# 上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=/app/storage/uploads

# 日志配置
LOG_LEVEL=info
LOG_DIR=/app/logs
