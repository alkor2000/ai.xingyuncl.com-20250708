# =====================================================
# AI Platform 环境变量配置示例
# 请复制此文件为 .env 并修改为实际值
# =====================================================

# 环境配置
NODE_ENV=production
PORT=4000
APP_NAME=AI Platform
APP_DOMAIN=your-domain.com

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_NAME=ai_platform
DB_CONNECTION_LIMIT=10

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD
REDIS_DB=0
REDIS_KEY_PREFIX=ai_platform:

# JWT配置 - 请生成新的密钥
# 生成命令: openssl rand -base64 64 | tr -d '\n'
JWT_ACCESS_SECRET=CHANGE_THIS_TO_YOUR_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_THIS_TO_YOUR_REFRESH_KEY
JWT_ACCESS_EXPIRES=12h
JWT_REFRESH_EXPIRES=14d

# CORS配置
CORS_ORIGINS=https://your-domain.com,http://localhost:3000

# 上传配置
UPLOAD_DIR=/app/storage/uploads
UPLOAD_MAX_SIZE=10485760

# 日志配置
LOG_LEVEL=info
LOG_DIR=/app/logs

# AI服务配置
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_TIMEOUT=30000
AI_RETRIES=3

# 速率限制
RATE_LIMIT_MAX=1000

# 调试选项
DEBUG_CONFIG=false
