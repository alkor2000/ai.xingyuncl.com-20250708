// Markmap 样式优化
.markmap-node {
  cursor: pointer;

  circle {
    fill: #fff;
    stroke: #007aff;
    stroke-width: 2px;
    r: 4px;
    cursor: pointer;
    transition: all 0.3s;

    &:hover {
      r: 6px;
      fill: #007aff;
    }
  }

  rect {
    fill: #ffffff;
    stroke-width: 2px;
    rx: 6px;
    ry: 6px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.08));
    transition: all 0.3s ease;
  }

  &:hover rect {
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.15));
  }

  text {
    fill: #1c1c1e;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'PingFang SC', sans-serif;
    font-weight: 500;
    font-size: 14px;
    cursor: pointer;
  }
}

// Markmap 连线样式 - 增强可见性
.markmap-link {
