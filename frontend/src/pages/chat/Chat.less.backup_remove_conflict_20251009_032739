    .ant-modal {
      max-width: calc(100vw - 32px);
      margin: 16px;
    }
  }
  
  .ant-drawer {
    .ant-drawer-content-wrapper {
      max-width: 100% !important;
    }
  }
  
  body.mobile-chat-active {
    position: fixed;
    width: 100%;
    overflow: hidden;
  }
}

