// ========== 动画 ==========
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

.event-card,
.stat-card,
.calendar-grid-cell {
  animation: fadeIn 0.3s ease;
}

.calendar-grid-cell.is-today {
  animation: pulse 2s ease-in-out infinite;
}
