/**
 * æ™ºèƒ½æ—¥å† - 4x4ç½‘æ ¼è§†å›¾ï¼ˆç§»åŠ¨ç«¯ä¼˜åŒ–ç‰ˆï¼‰
 * æ˜¾ç¤º16å¤©è§†å›¾ï¼šå‰2å¤© + ä»Šå¤© + å13å¤©
 * æ”¯æŒèƒŒæ™¯çŸ¥è¯†ç®¡ç† + ç§»åŠ¨ç«¯Tabåˆ‡æ¢
 */

import React, { useState, useEffect, useMemo } from 'react';
import { 
  Button, 
  Modal, 
  Form, 
  Input, 
  InputNumber, 
  Select, 
  DatePicker, 
  Slider, 
  message,
  Spin,
  Tag,
  Popconfirm,
  Row,
  Col,
  Empty,
  Divider,
  Tabs
} from 'antd';
import {
  PlusOutlined,
  SettingOutlined,
  ScanOutlined,
  CalendarOutlined,
  CheckCircleOutlined,
  ClockCircleOutlined,
  ExclamationCircleOutlined,
  EditOutlined,
  DeleteOutlined,
  ThunderboltOutlined,
  FileTextOutlined,
  LeftOutlined,
  RightOutlined,
  RobotOutlined,
  HistoryOutlined,
  ReloadOutlined,
  SaveOutlined,
  DownOutlined,
  RightOutlined as RightExpandOutlined,
  UnorderedListOutlined
} from '@ant-design/icons';
import { useTranslation } from 'react-i18next';
import dayjs from 'dayjs';
import relativeTime from 'dayjs/plugin/relativeTime';
import 'dayjs/locale/zh-cn';
import ReactMarkdown from 'react-markdown';
import useCalendarStore from '../../stores/calendarStore';
import useAuthStore from '../../stores/authStore';
import BackgroundKnowledgeManager from '../../components/calendar/BackgroundKnowledgeManager';
import './Calendar.less';

dayjs.extend(relativeTime);
dayjs.locale('zh-cn');

const { TextArea } = Input;
const { Option } = Select;

// é‡è¦åº¦é¢œè‰²æ˜ å°„
const IMPORTANCE_COLORS = {
  1: '#C7C7CC', 2: '#C7C7CC', 3: '#8E8E93', 4: '#8E8E93',
  5: '#007AFF', 6: '#007AFF', 7: '#FF9500', 8: '#FF9500',
  9: '#FF3B30', 10: '#FF3B30'
};

const CalendarPage = () => {
  const { t } = useTranslation();
  const { user } = useAuthStore();
  
  const {
    events,
    categories,
    latestAnalysis,
    eventsLoading,
    analysisLoading,
    aiModels,
    aiModelsLoading,
    promptTemplates,
    configLoading,
    fetchEvents,
    fetchCategories,
    fetchAvailableModels,
    fetchCalendarConfig,
    fetchLatestAnalysis,
    autoPerformAnalysis,
    createEvent,
    updateEvent,
    deleteEvent,
    markEventComplete,
    performAnalysis,
    fetchAnalysisHistory
  } = useCalendarStore();
  
  const [form] = Form.useForm();
  const [settingsForm] = Form.useForm();
  
  // æ—¥å†çŠ¶æ€ï¼šåŸºå‡†æ—¥æœŸï¼ˆé»˜è®¤ä»Šå¤©ï¼‰
  const [baseDate, setBaseDate] = useState(dayjs());
  const [selectedDate, setSelectedDate] = useState(dayjs());
  
  // æ¨¡æ€æ¡†çŠ¶æ€
  const [eventModalVisible, setEventModalVisible] = useState(false);
  const [editingEvent, setEditingEvent] = useState(null);
  const [settingsModalVisible, setSettingsModalVisible] = useState(false);
  const [historyModalVisible, setHistoryModalVisible] = useState(false);
  const [analysisHistory, setAnalysisHistory] = useState([]);
  
  // å†å²è®°å½•å±•å¼€çŠ¶æ€
  const [expandedHistoryId, setExpandedHistoryId] = useState(null);
  
  // ğŸ”¥ ç§»åŠ¨ç«¯TabçŠ¶æ€ï¼ˆæ–°å¢ï¼‰
  const [mobileTab, setMobileTab] = useState('calendar'); // calendar | ai | events | settings
  
  // è®¡ç®—16å¤©æ—¥æœŸèŒƒå›´ï¼ˆå‰2å¤© + ä»Šå¤© + å13å¤©ï¼‰
  const dateRange = useMemo(() => {
    const dates = [];
    for (let i = -2; i <= 13; i++) {
      dates.push(baseDate.add(i, 'day'));
    }
    return dates;
  }, [baseDate]);
  
  // è½¬æ¢ä¸º4x4ç½‘æ ¼
  const gridDates = useMemo(() => {
    const grid = [];
    for (let i = 0; i < 4; i++) {
      grid.push(dateRange.slice(i * 4, (i + 1) * 4));
    }
    return grid;
  }, [dateRange]);
  
  // è·å–æ—¥æœŸèŒƒå›´çš„äº‹é¡¹æ•°æ®
  const dateEvents = useMemo(() => {
    const eventMap = {};
    events.forEach(event => {
      const dateKey = dayjs(event.event_date).format('YYYY-MM-DD');
      if (!eventMap[dateKey]) {
        eventMap[dateKey] = [];
      }
      eventMap[dateKey].push(event);
    });
    return eventMap;
  }, [events]);
  
  // é€‰ä¸­æ—¥æœŸçš„äº‹é¡¹
  const selectedDateEvents = useMemo(() => {
    const dateKey = selectedDate.format('YYYY-MM-DD');
    return dateEvents[dateKey] || [];
  }, [dateEvents, selectedDate]);
  
  // åˆå§‹åŒ–æ•°æ®
  useEffect(() => {
    loadInitialData();
  }, []);
  
  // å½“åŸºå‡†æ—¥æœŸå˜åŒ–æ—¶é‡æ–°åŠ è½½äº‹é¡¹
  useEffect(() => {
    loadDateRangeEvents();
  }, [baseDate]);
  
  const loadInitialData = async () => {
    try {
      await Promise.all([
        fetchCategories(),
        fetchAvailableModels(),
        fetchCalendarConfig(),
        loadDateRangeEvents()
      ]);
      
      // åŠ è½½æœ€æ–°åˆ†æï¼Œå¦‚æœæ²¡æœ‰åˆ™è‡ªåŠ¨æ‰§è¡Œ
      const latest = await fetchLatestAnalysis();
      if (!latest) {
        setTimeout(() => {
          autoPerformAnalysis();
        }, 2000);
      }
    } catch (error) {
      console.error('åŠ è½½æ•°æ®å¤±è´¥:', error);
    }
  };
  
  const loadDateRangeEvents = async () => {
    const startDate = baseDate.add(-2, 'day').format('YYYY-MM-DD');
    const endDate = baseDate.add(13, 'day').format('YYYY-MM-DD');
    await fetchEvents(startDate, endDate);
  };
  
  // ==================== é…ç½®æŒä¹…åŒ– ====================
  
  const getDefaultSettings = () => {
    const defaultModel = aiModels.find(m => m.is_active) || aiModels[0];
    return {
      model_id: defaultModel?.id || null,
      template_id: null,
      scan_days_before: 15,
      scan_days_after: 15
    };
  };
  
  const loadSettings = () => {
    const key = `calendar_ai_settings_${user?.id || 'default'}`;
    const saved = localStorage.getItem(key);
    
    if (saved) {
      try {
        return JSON.parse(saved);
      } catch (e) {
        console.error('è§£æé…ç½®å¤±è´¥:', e);
      }
    }
    
    return getDefaultSettings();
  };
  
  const saveSettings = (settings) => {
    const key = `calendar_ai_settings_${user?.id || 'default'}`;
    localStorage.setItem(key, JSON.stringify(settings));
  };
  
  // ==================== æ—¥å†æ“ä½œ ====================
  
  const handlePrevPeriod = () => {
    setBaseDate(prev => prev.add(-16, 'day'));
  };
  
  const handleNextPeriod = () => {
    setBaseDate(prev => prev.add(16, 'day'));
  };
  
  const handleToday = () => {
    setBaseDate(dayjs());
    setSelectedDate(dayjs());
  };
  
  const handleSelectDate = (date) => {
    setSelectedDate(date);
    // ğŸ”¥ ç§»åŠ¨ç«¯ï¼šé€‰æ‹©æ—¥æœŸåè‡ªåŠ¨åˆ‡æ¢åˆ°äº‹é¡¹Tab
    if (window.innerWidth <= 768) {
      setMobileTab('events');
    }
  };
  
  // ==================== äº‹é¡¹æ“ä½œ ====================
  
  const handleCreateEvent = () => {
    setEditingEvent(null);
    form.resetFields();
    form.setFieldsValue({
      event_date: selectedDate,
      importance: 5,
      status: 'not_started',
      recurrence_type: 'none',
      category: categories.length > 0 ? categories[0].name : 'å…¶ä»–'
    });
    setEventModalVisible(true);
  };
  
  const handleEditEvent = (event) => {
    setEditingEvent(event);
    form.setFieldsValue({
      ...event,
      event_date: dayjs(event.event_date)
    });
    setEventModalVisible(true);
  };
  
  const handleEventSubmit = async () => {
    try {
      const values = await form.validateFields();
      const eventData = {
        ...values,
        event_date: values.event_date.format('YYYY-MM-DD'),
        recurrence_end_date: values.recurrence_end_date ? 
          values.recurrence_end_date.format('YYYY-MM-DD') : null
      };
      
      if (editingEvent) {
        await updateEvent(editingEvent.id, eventData);
      } else {
        await createEvent(eventData);
      }
      
      setEventModalVisible(false);
      await loadDateRangeEvents();
    } catch (error) {
      console.error('æäº¤å¤±è´¥:', error);
    }
  };
  
  const handleDeleteEvent = async (eventId) => {
    try {
      await deleteEvent(eventId);
      await loadDateRangeEvents();
    } catch (error) {
      console.error('åˆ é™¤å¤±è´¥:', error);
    }
  };
  
  const handleMarkComplete = async (eventId) => {
    try {
      await markEventComplete(eventId);
      await loadDateRangeEvents();
    } catch (error) {
      console.error('æ ‡è®°å¤±è´¥:', error);
    }
  };
  
  // ==================== AIåˆ†ææ“ä½œ ====================
  
  const handleOpenSettings = () => {
    const settings = loadSettings();
    settingsForm.setFieldsValue(settings);
    setSettingsModalVisible(true);
  };
  
  const handleSaveSettings = async () => {
    try {
      const values = await settingsForm.validateFields();
      saveSettings(values);
      message.success('è®¾ç½®å·²ä¿å­˜');
      setSettingsModalVisible(false);
    } catch (error) {
      console.error('ä¿å­˜è®¾ç½®å¤±è´¥:', error);
    }
  };
  
  const handleNewAnalysis = async () => {
    const settings = loadSettings();
    
    if (!settings.model_id) {
      message.warning('è¯·å…ˆè®¾ç½®AIæ¨¡å‹');
      handleOpenSettings();
      return;
    }
    
    try {
      const totalDays = settings.scan_days_before + settings.scan_days_after;
      
      await performAnalysis({
        model_id: settings.model_id,
        template_id: settings.template_id,
        scan_days: totalDays
      });
    } catch (error) {
      console.error('åˆ†æå¤±è´¥:', error);
    }
  };
  
  const handleViewHistory = async () => {
    try {
      const history = await fetchAnalysisHistory();
      setAnalysisHistory(history);
      setExpandedHistoryId(null);
      setHistoryModalVisible(true);
    } catch (error) {
      console.error('è·å–å†å²å¤±è´¥:', error);
    }
  };
  
  const handleToggleHistory = (itemId) => {
    setExpandedHistoryId(expandedHistoryId === itemId ? null : itemId);
  };
  
  // ==================== å·¥å…·æ–¹æ³• ====================
  
  const getDateStats = (date) => {
    const dateKey = date.format('YYYY-MM-DD');
    const dayEvents = dateEvents[dateKey] || [];
    return {
      count: dayEvents.length,
      highPriority: dayEvents.filter(e => e.importance >= 8).length
    };
  };
  
  const getStatusIcon = (status) => {
    switch (status) {
      case 'completed':
        return <CheckCircleOutlined style={{ color: '#34C759' }} />;
      case 'in_progress':
        return <ClockCircleOutlined style={{ color: '#FF9500' }} />;
      default:
        return <ExclamationCircleOutlined style={{ color: '#8E8E93' }} />;
    }
  };
  
  const getImportanceBadge = (importance) => {
    if (importance >= 8) return { text: t('calendar.importance.high'), class: 'high' };
    if (importance >= 5) return { text: t('calendar.importance.medium'), class: 'medium' };
    return { text: t('calendar.importance.low'), class: 'low' };
  };

  return (
    <div className="calendar-page calendar-grid-view">
      {/* ğŸ”¥ ç§»åŠ¨ç«¯åº•éƒ¨Tabå¯¼èˆªï¼ˆä»…åœ¨â‰¤768pxæ˜¾ç¤ºï¼‰*/}
      <div className="mobile-bottom-tabs">
        <div 
          className={`tab-item ${mobileTab === 'calendar' ? 'active' : ''}`}
          onClick={() => setMobileTab('calendar')}
        >
          <CalendarOutlined />
          <span>æ—¥å†</span>
        </div>
        <div 
          className={`tab-item ${mobileTab === 'ai' ? 'active' : ''}`}
          onClick={() => setMobileTab('ai')}
        >
          <RobotOutlined />
          <span>AIåˆ†æ</span>
        </div>
        <div 
          className={`tab-item ${mobileTab === 'events' ? 'active' : ''}`}
          onClick={() => setMobileTab('events')}
        >
          <UnorderedListOutlined />
          <span>äº‹é¡¹</span>
        </div>
        <div 
          className={`tab-item ${mobileTab === 'settings' ? 'active' : ''}`}
          onClick={() => setMobileTab('settings')}
        >
          <SettingOutlined />
          <span>è®¾ç½®</span>
        </div>
      </div>

      {/* ä¸»å†…å®¹åŒºåŸŸ */}
      <div className="calendar-content">
        {/* å·¦ä¾§æ™ºèƒ½åˆ†æé¢æ¿ï¼ˆæ¡Œé¢ç«¯æ˜¾ç¤ºï¼Œç§»åŠ¨ç«¯æ ¹æ®Tabæ˜¾ç¤ºï¼‰*/}
        <div className={`calendar-left-panel ai-analysis-panel ${mobileTab === 'ai' ? 'mobile-active' : ''}`}>
          <div className="panel-header">
            <div className="header-title">
              <RobotOutlined /> æ™ºèƒ½æ—¥å†
            </div>
          </div>
          
          <Spin spinning={analysisLoading}>
            {latestAnalysis ? (
              <div className="analysis-content">
                <div className="analysis-meta">
                  <div className="meta-item">
                    <CalendarOutlined />
                    <span>{dayjs(latestAnalysis.created_at).fromNow()}</span>
                  </div>
                  <div className="meta-item">
                    <ThunderboltOutlined />
                    <span>{latestAnalysis.model_name}</span>
                  </div>
                  <div className="meta-item">
                    <FileTextOutlined />
                    <span>åˆ†æäº†{latestAnalysis.events_count}ä¸ªäº‹é¡¹</span>
                  </div>
                </div>
                
                <div className="analysis-result">
                  <ReactMarkdown>
                    {latestAnalysis.analysis_result?.raw_text || 'æš‚æ— åˆ†æå†…å®¹'}
                  </ReactMarkdown>
                </div>
                
                <div className="analysis-actions">
                  <Button 
                    icon={<ReloadOutlined />}
                    onClick={handleNewAnalysis}
                    loading={analysisLoading}
                    block
                  >
                    ä¸€é”®åˆ†æ
                  </Button>
                  <Button 
                    icon={<HistoryOutlined />}
                    onClick={handleViewHistory}
                    block
                  >
                    æŸ¥çœ‹å†å²
                  </Button>
                </div>
              </div>
            ) : (
              <div className="analysis-empty">
                <Empty
                  image={<RobotOutlined style={{ fontSize: 64, color: '#d9d9d9' }} />}
                  description="æš‚æ— åˆ†æè®°å½•"
                >
                  <p className="empty-tip">è®©AIå¸®ä½ åˆ†ææ—¶é—´ç®¡ç†ï¼Œå‘ç°ä¼˜åŒ–ç©ºé—´ï¼</p>
                  <Button 
                    type="primary" 
                    icon={<ThunderboltOutlined />}
                    onClick={handleNewAnalysis}
                    loading={analysisLoading}
                  >
                    ç«‹å³åˆ†æ
                  </Button>
                </Empty>
              </div>
            )}
          </Spin>
        </div>
        
        {/* ä¸­é—´æ—¥å†é¢æ¿ï¼ˆæ¡Œé¢ç«¯å§‹ç»ˆæ˜¾ç¤ºï¼Œç§»åŠ¨ç«¯æ ¹æ®Tabæ˜¾ç¤ºï¼‰*/}
        <div className={`calendar-main-panel calendar-grid-panel ${mobileTab === 'calendar' ? 'mobile-active' : ''}`}>
          {/* æ—¥å†å¤´éƒ¨æ§åˆ¶æ  */}
          <div className="calendar-controls">
            <div className="controls-left">
              <Button 
                icon={<SettingOutlined />}
                onClick={handleOpenSettings}
                className="mobile-friendly-btn"
              >
                è®¾ç½®
              </Button>
            </div>
            
            <div className="controls-center">
              <Button 
                icon={<LeftOutlined />} 
                onClick={handlePrevPeriod}
                size="small"
                className="mobile-friendly-btn"
              />
              <Button 
                onClick={handleToday}
                size="small"
                className="mobile-friendly-btn"
              >
                è¿”å›ä»Šå¤©
              </Button>
              <Button 
                icon={<RightOutlined />} 
                onClick={handleNextPeriod}
                size="small"
                className="mobile-friendly-btn"
              />
            </div>
            
            <div className="controls-right">
              <span className="date-range-display">
                {dateRange[0].format('MM/DD')} - {dateRange[15].format('MM/DD')}
              </span>
            </div>
          </div>
          
          {/* 4x4æ—¥å†ç½‘æ ¼ */}
          <Spin spinning={eventsLoading}>
            <div className="calendar-grid">
              {gridDates.map((row, rowIndex) => (
                <div key={rowIndex} className="calendar-grid-row">
                  {row.map((date, colIndex) => {
                    const stats = getDateStats(date);
                    const isToday = date.isSame(dayjs(), 'day');
                    const isSelected = date.isSame(selectedDate, 'day');
                    
                    return (
                      <div
                        key={colIndex}
                        className={`calendar-grid-cell ${isToday ? 'is-today' : ''} ${isSelected ? 'is-selected' : ''}`}
                        onClick={() => handleSelectDate(date)}
                      >
                        <div className="cell-header">
                          <span className="cell-weekday">{date.format('ddd')}</span>
                          <span className="cell-date">{date.format('DD')}</span>
                          
                          {stats.highPriority > 0 && (
                            <span className="important-count">
                              é‡è¦{stats.highPriority}
                            </span>
                          )}
                        </div>
                        
                        {isToday && <div className="today-badge">ä»Šæ—¥</div>}
                        
                        {stats.count > 0 && (
                          <div className="cell-events">
                            {stats.count > 3 ? (
                              <div className="event-count-badge">{stats.count}</div>
                            ) : (
                              <div className="event-dots">
                                {Array.from({ length: stats.count }).map((_, i) => (
                                  <div 
                                    key={i} 
                                    className={`event-dot ${stats.highPriority > 0 ? 'high-priority' : ''}`}
                                  />
                                ))}
                              </div>
                            )}
                          </div>
                        )}
                      </div>
                    );
                  })}
                </div>
              ))}
            </div>
          </Spin>
        </div>
        
        {/* å³ä¾§äº‹é¡¹åˆ—è¡¨ï¼ˆæ¡Œé¢ç«¯æ˜¾ç¤ºï¼Œç§»åŠ¨ç«¯æ ¹æ®Tabæ˜¾ç¤ºï¼‰*/}
        <div className={`calendar-right-panel ${mobileTab === 'events' ? 'mobile-active' : ''}`}>
          <div className="panel-header">
            <h3>äº‹é¡¹è¯¦æƒ…</h3>
            <span className="date-display">
              {selectedDate.format('YYYYå¹´MMæœˆDDæ—¥')}
            </span>
          </div>
          
          <Button 
            type="primary" 
            icon={<PlusOutlined />}
            block
            onClick={handleCreateEvent}
            style={{ marginBottom: 16 }}
            className="mobile-friendly-btn"
          >
            åˆ›å»ºäº‹é¡¹
          </Button>
          
          <div className="events-list">
            {selectedDateEvents.length === 0 ? (
              <div className="empty-events">
                <CalendarOutlined />
                <p>å½“å‰æ— äº‹é¡¹</p>
              </div>
            ) : (
              selectedDateEvents.map(event => {
                const badge = getImportanceBadge(event.importance);
                return (
                  <div 
                    key={event.id} 
                    className={`event-card status-${event.status}`}
                    style={{ borderLeftColor: IMPORTANCE_COLORS[event.importance] }}
                  >
                    <div className="event-header">
                      <div className="event-title">{event.content}</div>
                      <span className={`importance-badge ${badge.class}`}>
                        {badge.text}
                      </span>
                    </div>
                    
                    <div className="event-meta">
                      <div className="meta-item">
                        {getStatusIcon(event.status)}
                        <span>{t(`calendar.event.status.${event.status}`)}</span>
                      </div>
                      <div className="meta-item">
                        <Tag color={event.color || '#007AFF'}>{event.category}</Tag>
                      </div>
                    </div>
                    
                    <div className="event-actions">
                      <Button 
                        className="btn-edit mobile-friendly-btn"
                        size="small"
                        icon={<EditOutlined />}
                        onClick={() => handleEditEvent(event)}
                      >
                        ç¼–è¾‘
                      </Button>
                      <Popconfirm
                        title="ç¡®è®¤åˆ é™¤æ­¤äº‹é¡¹ï¼Ÿ"
                        onConfirm={() => handleDeleteEvent(event.id)}
                        okText="ç¡®è®¤"
                        cancelText="å–æ¶ˆ"
                      >
                        <Button 
                          className="btn-delete mobile-friendly-btn"
                          size="small"
                          icon={<DeleteOutlined />}
                        >
                          åˆ é™¤
                        </Button>
                      </Popconfirm>
                    </div>
                  </div>
                );
              })
            )}
          </div>
        </div>

        {/* ğŸ”¥ ç§»åŠ¨ç«¯è®¾ç½®é¢æ¿ï¼ˆæ–°å¢ï¼‰*/}
        <div className={`calendar-settings-panel ${mobileTab === 'settings' ? 'mobile-active' : ''}`}>
          <div className="panel-header">
            <h3>å¿«æ·è®¾ç½®</h3>
          </div>
          <div className="settings-quick-actions">
            <Button 
              icon={<SettingOutlined />}
              onClick={handleOpenSettings}
              block
              size="large"
              className="mobile-friendly-btn"
            >
              AIåˆ†æè®¾ç½®
            </Button>
            <Button 
              icon={<HistoryOutlined />}
              onClick={handleViewHistory}
              block
              size="large"
              className="mobile-friendly-btn"
              style={{ marginTop: 12 }}
            >
              æŸ¥çœ‹åˆ†æå†å²
            </Button>
          </div>
        </div>
      </div>
      
      {/* äº‹é¡¹è¡¨å•æ¨¡æ€æ¡† */}
      <Modal
        title={editingEvent ? 'ç¼–è¾‘äº‹é¡¹' : 'åˆ›å»ºäº‹é¡¹'}
        open={eventModalVisible}
        onOk={handleEventSubmit}
        onCancel={() => setEventModalVisible(false)}
        width={600}
        okText="ç¡®è®¤"
        cancelText="å–æ¶ˆ"
        className="event-form-modal mobile-fullscreen-modal"
      >
        <Form form={form} layout="vertical">
          <Form.Item
            name="content"
            label="äº‹é¡¹å†…å®¹"
            rules={[{ required: true, message: 'è¯·è¾“å…¥äº‹é¡¹å†…å®¹' }]}
          >
            <TextArea rows={4} placeholder="è¯·è¾“å…¥äº‹é¡¹å†…å®¹" />
          </Form.Item>
          
          <Row gutter={16}>
            <Col span={12}>
              <Form.Item
                name="event_date"
                label="æ—¥æœŸ"
                rules={[{ required: true, message: 'è¯·é€‰æ‹©æ—¥æœŸ' }]}
              >
                <DatePicker style={{ width: '100%' }} />
              </Form.Item>
            </Col>
            <Col span={12}>
              <Form.Item
                name="category"
                label="åˆ†ç±»"
                rules={[{ required: true, message: 'è¯·é€‰æ‹©åˆ†ç±»' }]}
              >
                <Select placeholder="è¯·é€‰æ‹©åˆ†ç±»">
                  {categories.map(cat => (
                    <Option key={cat.id} value={cat.name}>{cat.name}</Option>
                  ))}
                </Select>
              </Form.Item>
            </Col>
          </Row>
          
          <Form.Item name="importance" label="é‡è¦åº¦">
            <Slider 
              min={1} 
              max={10} 
              marks={{ 1: '1', 5: '5', 10: '10' }}
              className="importance-slider"
            />
          </Form.Item>
          
          <Row gutter={16}>
            <Col span={12}>
              <Form.Item name="status" label="çŠ¶æ€">
                <Select>
                  <Option value="not_started">æœªå¼€å§‹</Option>
                  <Option value="in_progress">è¿›è¡Œä¸­</Option>
                  <Option value="completed">å·²å®Œæˆ</Option>
                  <Option value="daily">æ—¥å¸¸</Option>
                </Select>
              </Form.Item>
            </Col>
            <Col span={12}>
              <Form.Item name="recurrence_type" label="é‡å¤">
                <Select>
                  <Option value="none">ä¸é‡å¤</Option>
                  <Option value="daily">æ¯å¤©</Option>
                  <Option value="weekly">æ¯å‘¨</Option>
                  <Option value="monthly">æ¯æœˆ</Option>
                </Select>
              </Form.Item>
            </Col>
          </Row>
          
          <Form.Item name="file_link" label="æ–‡ä»¶é“¾æ¥">
            <Input placeholder="å¯é€‰ï¼šç›¸å…³æ–‡ä»¶é“¾æ¥" />
          </Form.Item>
        </Form>
      </Modal>
      
      {/* AIåˆ†æè®¾ç½®æ¨¡æ€æ¡† */}
      <Modal
        title={<><SettingOutlined /> AIåˆ†æè®¾ç½®</>}
        open={settingsModalVisible}
        onOk={handleSaveSettings}
        onCancel={() => setSettingsModalVisible(false)}
        width={900}
        okText="ä¿å­˜è®¾ç½®"
        cancelText="å–æ¶ˆ"
        className="ai-analysis-modal mobile-fullscreen-modal"
        style={{ top: 20 }}
      >
        <Spin spinning={aiModelsLoading || configLoading}>
          <Form form={settingsForm} layout="vertical">
            <Form.Item
              name="model_id"
              label="é€‰æ‹©AIæ¨¡å‹"
              rules={[{ required: true, message: 'è¯·é€‰æ‹©AIæ¨¡å‹' }]}
            >
              <Select placeholder="è¯·é€‰æ‹©AIæ¨¡å‹">
                {aiModels.filter(m => m.is_active).map(model => (
                  <Option key={model.id} value={model.id}>
                    {model.display_name} ({model.credits_per_chat} ç§¯åˆ†/æ¬¡)
                  </Option>
                ))}
              </Select>
            </Form.Item>
            
            <Form.Item
              name="template_id"
              label="åˆ†ææ¨¡æ¿"
              tooltip="é€‰æ‹©åˆ†ææ¨¡æ¿ï¼Œä¸é€‰åˆ™ä½¿ç”¨é»˜è®¤æ¨¡æ¿"
            >
              <Select placeholder="è¯·é€‰æ‹©æ¨¡æ¿ï¼ˆå¯é€‰ï¼‰" allowClear>
                {promptTemplates.map(template => (
                  <Option key={template.id} value={template.id}>
                    {template.name}
                    {template.is_default && ' (é»˜è®¤)'}
                  </Option>
                ))}
              </Select>
            </Form.Item>
            
            <Row gutter={16}>
              <Col span={12}>
                <Form.Item
                  name="scan_days_before"
                  label="ä»Šæ—¥å‰"
                  rules={[
                    { required: true, message: 'è¯·è¾“å…¥å¤©æ•°' },
                    { type: 'number', min: 1, max: 365, message: 'èŒƒå›´1-365å¤©' }
                  ]}
                >
                  <InputNumber 
                    min={1} 
                    max={365} 
                    style={{ width: '100%' }}
                    addonAfter="å¤©"
                  />
                </Form.Item>
              </Col>
              <Col span={12}>
                <Form.Item
                  name="scan_days_after"
                  label="ä»Šæ—¥å"
                  rules={[
                    { required: true, message: 'è¯·è¾“å…¥å¤©æ•°' },
                    { type: 'number', min: 1, max: 365, message: 'èŒƒå›´1-365å¤©' }
                  ]}
                >
                  <InputNumber 
                    min={1} 
                    max={365} 
                    style={{ width: '100%' }}
                    addonAfter="å¤©"
                  />
                </Form.Item>
              </Col>
            </Row>
          </Form>
          
          <Divider />
          
          <BackgroundKnowledgeManager />
        </Spin>
      </Modal>
      
      {/* å†å²è®°å½•æ¨¡æ€æ¡† */}
      <Modal
        title={<><HistoryOutlined /> åˆ†æå†å²</>}
        open={historyModalVisible}
        onCancel={() => {
          setHistoryModalVisible(false);
          setExpandedHistoryId(null);
        }}
        footer={null}
        width={900}
        className="history-modal mobile-fullscreen-modal"
      >
        <div className="history-list">
          {analysisHistory.length === 0 ? (
            <Empty description="æš‚æ— å†å²è®°å½•" />
          ) : (
            analysisHistory.map(item => (
              <div 
                key={item.id} 
                className={`history-item ${expandedHistoryId === item.id ? 'expanded' : ''}`}
              >
                <div 
                  className="item-header clickable"
                  onClick={() => handleToggleHistory(item.id)}
                >
                  <div className="header-left">
                    <span className="item-time">
                      {dayjs(item.created_at).format('YYYY-MM-DD HH:mm')}
                    </span>
                    <Tag color="blue">{item.model_name}</Tag>
                  </div>
                  <div className="header-right">
                    {expandedHistoryId === item.id ? 
                      <DownOutlined style={{ color: '#667eea' }} /> : 
                      <RightExpandOutlined style={{ color: '#8e8e93' }} />
                    }
                  </div>
                </div>
                
                <div className="item-info">
                  åˆ†æäº† {item.events_count} ä¸ªäº‹é¡¹ | æ¶ˆè€— {item.credits_consumed} ç§¯åˆ†
                </div>
                
                {expandedHistoryId === item.id && (
                  <div className="item-detail">
                    <ReactMarkdown>
                      {item.analysis_result?.raw_text || 'æš‚æ— åˆ†æå†…å®¹'}
                    </ReactMarkdown>
                  </div>
                )}
              </div>
            ))
          )}
        </div>
      </Modal>
    </div>
  );
};

export default CalendarPage;
