import BasicLayout from './layouts/BasicLayout'

// æ‡’åŠ è½½Loadingç»„ä»¶
const LazyLoadingWrapper = ({ children }) => (
  <Suspense fallback={
    <div style={{ 
      display: 'flex', 
      justifyContent: 'center', 
      alignItems: 'center', 
      height: '60vh',
      flexDirection: 'column',
      gap: '16px'
    }}>
      <Spin size="large" tip="åŠ è½½æ¨¡å—ä¸­..." />
      <div style={{ color: '#666', fontSize: '14px' }}>
        æ­£åœ¨åŠ è½½ç®¡ç†åŠŸèƒ½...
      </div>
    </div>
  }>
    {children}
  </Suspense>
)

// è·¯ç”±å®ˆå«ç»„ä»¶
const ProtectedRoute = ({ children }) => {
  const { isAuthenticated, loading } = useAuthStore()
  const { initSystemConfig } = useSystemConfigStore()
  const { t } = useTranslation()
  
  // åˆå§‹åŒ–ç³»ç»Ÿé…ç½®
  useEffect(() => {
    if (isAuthenticated) {
      initSystemConfig()
    }
  }, [isAuthenticated, initSystemConfig])
  
  if (loading) {
    return (
      <div style={{ 
        display: 'flex', 
        justifyContent: 'center', 
        alignItems: 'center', 
        height: '100vh' 
      }}>
        <Spin size="large" tip={t('status.loading')} />
      </div>
    )
  }
  
  if (!isAuthenticated) {
    message.warning(t('auth.loginRequired'))
    return <Navigate to="/login" replace />
  }
  
  return children
}

// å…¬å¼€è·¯ç”±ç»„ä»¶
const PublicRoute = ({ children }) => {
  const { isAuthenticated } = useAuthStore()
  
  if (isAuthenticated) {
    return <Navigate to="/dashboard" replace />
  }
  
  return children
}

// ä¼˜åŒ–çš„é¦–é¡µè·¯ç”±ç»„ä»¶
const HomeRoute = () => {
  const { isAuthenticated } = useAuthStore()

  if (isAuthenticated) {
    return <Navigate to="/dashboard" replace />
  }

  return <CustomLanding />
}

const App = () => {
  const { i18n } = useTranslation()
  const currentLanguage = i18n.language
  const locale = currentLanguage === 'zh-CN' ? zhCN : enUS
  
  // è·å–ç³»ç»Ÿé…ç½®
  const { systemConfig, initialized, getSiteLogo, getSiteDescription } = useSystemConfigStore()

  // å…¨å±€æ¶ˆæ¯é…ç½®
  useEffect(() => {
    message.config({
      top: 80,
      duration: 3,
      maxCount: 3,
    })
  }, [])
  
  // ğŸ”¥ æ–°å¢ï¼šåŠ¨æ€æ›´æ–°æµè§ˆå™¨æ ‡ç­¾æ çš„faviconå’Œtitle
  useEffect(() => {
    // åªæœ‰åœ¨ç³»ç»Ÿé…ç½®åˆå§‹åŒ–å®Œæˆåæ‰æ›´æ–°
    if (!initialized) return
    
    try {
      // 1. æ›´æ–°favicon
      const logoUrl = getSiteLogo()
      if (logoUrl) {
        const faviconLink = document.getElementById('favicon-link') || 
                           document.querySelector("link[rel*='icon']")
        
        if (faviconLink) {
          // ä½¿ç”¨ä¸Šä¼ çš„logoä½œä¸ºfavicon
          faviconLink.href = logoUrl
          console.log('âœ… Faviconå·²æ›´æ–°:', logoUrl)
        } else {
          // å¦‚æœæ²¡æœ‰æ‰¾åˆ°favicon linkæ ‡ç­¾ï¼Œåˆ›å»ºä¸€ä¸ªæ–°çš„
          const newLink = document.createElement('link')
          newLink.id = 'favicon-link'
          newLink.rel = 'icon'
          newLink.type = 'image/png'
          newLink.href = logoUrl
          document.head.appendChild(newLink)
          console.log('âœ… Faviconå·²åˆ›å»ºå¹¶æ›´æ–°:', logoUrl)
        }
      }
      
      // 2. æ›´æ–°é¡µé¢æ ‡é¢˜
      const siteDescription = getSiteDescription()
      if (siteDescription && siteDescription !== 'ä¼ä¸šçº§AIåº”ç”¨èšåˆå¹³å°') {
        document.title = siteDescription
        console.log('âœ… é¡µé¢æ ‡é¢˜å·²æ›´æ–°:', siteDescription)
      }
    } catch (error) {
      console.error('âŒ æ›´æ–°faviconæˆ–titleå¤±è´¥:', error)
    }
  }, [initialized, systemConfig, getSiteLogo, getSiteDescription])

  return (
    <ConfigProvider locale={locale}>
      <ThemeProvider>
        <Router>
          <div className="app">
            <Routes>
              {/* æ ¹è·¯å¾„ */}
              <Route path="/" element={<HomeRoute />} />

              {/* å…¬å¼€è·¯ç”± */}
              <Route 
                path="/login" 
                element={
                  <PublicRoute>
                    <Login />
                  </PublicRoute>
                } 
              />
              <Route 
                path="/register" 
                element={
                  <PublicRoute>
                    <Register />
                  </PublicRoute>
                } 
              />
              <Route 
                path="/org-application" 
                element={
                  <PublicRoute>
                    <OrgApplication />
                  </PublicRoute>
                } 
              />
              
              {/* SSOå›è°ƒè·¯ç”± */}
              <Route 
                path="/auth/sso-callback" 
                element={<SSOCallback />} 
              />

              {/* å—ä¿æŠ¤çš„è·¯ç”± */}
              <Route
                path="/*"
                element={
                  <ProtectedRoute>
                    <BasicLayout>
                      <Routes>
                        <Route path="/dashboard" element={<Dashboard />} />
                        <Route path="/chat" element={<Chat />} />
                        <Route path="/profile" element={<Profile />} />
                        
                        {/* çŸ¥è¯†åº“é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/knowledge" 
                          element={
                            <LazyLoadingWrapper>
                              <KnowledgeBase />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* å›¾åƒç”Ÿæˆé¡µé¢è·¯ç”± */}
                        <Route 
                          path="/image" 
                          element={
                            <LazyLoadingWrapper>
                              <ImageGeneration />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* è§†é¢‘ç”Ÿæˆé¡µé¢è·¯ç”± */}
                        <Route 
                          path="/video" 
                          element={
                            <LazyLoadingWrapper>
                              <VideoGeneration />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* HTMLç¼–è¾‘å™¨é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/html-editor" 
                          element={
                            <LazyLoadingWrapper>
                              <HtmlEditor />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* æ–‡ä»¶ç®¡ç†é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/storage" 
                          element={
                            <LazyLoadingWrapper>
                              <StorageManager />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* æ€ç»´å¯¼å›¾é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/mindmap" 
                          element={
                            <LazyLoadingWrapper>
                              <Mindmap />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* OCRé¡µé¢è·¯ç”± */}
                        <Route 
                          path="/ocr" 
                          element={
                            <LazyLoadingWrapper>
                              <OcrTool />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* æ—¥å†é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/calendar" 
                          element={
                            <LazyLoadingWrapper>
                              <Calendar />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* Agentå·¥ä½œæµè·¯ç”± - ä¿®æ”¹ä¸ºå•ä¸€å…¥å£ */}
                        <Route 
                          path="/agent" 
                          element={
                            <LazyLoadingWrapper>
                              <AgentWorkspace />
                            </LazyLoadingWrapper>
                          } 
                        />
                        
                        {/* æ¨¡å—é¡µé¢è·¯ç”± */}
                        <Route 
                          path="/module/:moduleName" 
                          element={
