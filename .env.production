# 生产环境配置 - www.nebulink.com.cn

# === 应用配置 ===
NODE_ENV=production
APP_NAME="星云AI平台"
APP_DOMAIN=www.nebulink.com.cn
BACKEND_PORT=4000
PORT=3000

# === 数据库配置 ===
DB_HOST=mysql
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=AiPlatform@2025!
DB_NAME=ai_platform
MYSQL_ROOT_PASSWORD=rootpass2025

# === Redis配置 ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === JWT配置（生产环境必须修改） ===
JWT_ACCESS_SECRET=prod-secret-key-change-this-$(date +%s)
JWT_REFRESH_SECRET=prod-refresh-key-change-this-$(date +%s)
JWT_ACCESS_EXPIRES=12h
JWT_REFRESH_EXPIRES=14d

# === CORS配置 ===
CORS_ORIGINS=https://www.nebulink.com.cn,http://www.nebulink.com.cn

# === 文件上传配置 ===
UPLOAD_DIR=/app/storage/uploads
UPLOAD_MAX_SIZE=10485760

# === 日志配置 ===
LOG_LEVEL=info
LOG_DIR=/app/logs

# === 速率限制 ===
RATE_LIMIT_MAX=1000
