# 生产环境配置模板 - 商用服务器需要修改的值
NODE_ENV=production
APP_NAME="Nebulink AI Platform"
APP_DOMAIN=www.nebulink.com.cn
BACKEND_PORT=4000
PORT=3000

# 数据库配置 - 需要根据实际修改
DB_HOST=mysql  # Docker内使用服务名
DB_PORT=3306
DB_USER=ai_user
DB_PASSWORD=【需要设置强密码】
DB_NAME=ai_platform

# Redis配置
REDIS_HOST=redis  # Docker内使用服务名
REDIS_PORT=6379
REDIS_PASSWORD=【建议设置密码】

# JWT配置 - 必须修改！！！
JWT_ACCESS_SECRET=【必须生成新的随机密钥】
JWT_REFRESH_SECRET=【必须生成新的随机密钥】

# CORS配置
CORS_ORIGINS=https://www.nebulink.com.cn

# 其他配置保持不变...
